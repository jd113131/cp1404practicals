BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput
            id: distance_miles
            text: "0"
            size_hint_x: 0.8
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.2
            Button:
                text: "Up"
                on_press: app.update_distance(distance_miles.text, 1)
            Button:
                text: "Down"
                on_press: app.update_distance(distance_miles.text, -1)
    Button:
        text: "Convert miles to km"
        on_press: app.convert(distance_miles.text)
    Label:
        text: app.distance_in_km
        font_size: 30
        color: (1,1,0,1)
